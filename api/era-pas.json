{
    "openapi": "3.0.1",
    "info": {
        "title": "eRA PAS Web Service API",
        "description": "eRA PAS Web Service",
        "license": {
            "name": "Apache 2.0",
            "url": "http://springdoc.org"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "https://services.internal.dev.era.nih.gov",
            "description": "development"
        },
        {
            "url": "https://services.internal.test.era.nih.gov",
            "description": "test"
        },
        {
            "url": "https://services.internal.stage.era.nih.gov",
            "description": "staging"
        },
        {
            "url": "https://services.internal.era.nih.gov",
            "description": "production"
        }
    ],
    "paths": {
        "/aasws/api/pas/getRoles": {
            "post": {
                "tags": [
                    "era-pas-controller"
                ],
                "operationId": "getUserProfile",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UserIdentityIn"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserProfile"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "content": {
                            "text/plain": {
                                "schema":{
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server Error",
                        "content": {
                            "text/plain": {
                                "schema":{
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "UserIdentityIn": {
                "type": "object",
                "properties": {
                    "userIdentityIn": {
                        "$ref": "#/components/schemas/UserIdentity"        
                    }
                }
            },
            "UserIdentity": {
                "type": "object",
                "properties": {
                    "callerId": {
                        "type": "string"
                    },
                    "userName": {
                        "$ref": "#/components/schemas/UserName"
                    }
                } 
            },
            "UserProfile": {
                "type": "object",
                "properties": {
                    "UserProfile": {
                        "$ref": "#/components/schemas/UserProfileEmbedded"
                    }
                }
            },
            "UserProfileEmbedded": {
                "type": "object",
                "properties": {
                    "responseTime": {
                        "type": "integer",
                        "format": "int64"
                    },
                    "userName": {
                        "type": "string"
                    },
                    "primaryOrgId": {
                        "type": "string"
                    },
                    "profileId": {
                        "type": "array",
                        "items": {
                            "type": "integer",
                            "format": "int64"
                        }
                    },
                    "userRole": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/UserRole"
                        }
                    }
                }
            },
            "UserRole": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "context": {
                        "type": "string"
                    },
                    "organization": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            },
            "UserName": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "orgId": {
                        "type": "string"
                    }
                }
            }
        }
    }
}